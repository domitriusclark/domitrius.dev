---
const { postUrl, post, blocks } = Astro.props;
const pathname = new URL(Astro.url.pathname, "http://localhost:3001");
const [endpoint] = new URL(postUrl).pathname
  .split("/")
  .filter((str) => str.length > 0);
---

<a class="link" href={`${pathname}/${endpoint}`}>
  <div class="preview-wrapper">
    <p class="title">{post.properties.title}</p>
    <p class="date">{post.date.created}</p>
  </div>
</a>

<style lang="scss">
  .preview-wrapper {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    padding: var(--size-6) 0;
    border-top: 1px solid rgba(0, 0, 0, 0.2);
    .date {
      min-width: 10ch;
    }
  }
</style>
